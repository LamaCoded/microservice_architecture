{
    "Jwt": {
        "Key": "SECRET_KEY_123456_making_it_long",
        "Issuer": "AuthService",
        "Audience": "Microservices",
        "ExpiryMinutes": 15
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "ReverseProxy": {
        "Routes": {
            "userservice": {
                "ClusterId": "userserviceCluster",
                "Match": {
                    "Path": "/users/{**catch-all}"
                }
            },
            "orderservice": {
                "ClusterId": "orderserviceCluster",
                "Match": {
                    "Path": "/orders/{**catch-all}"
                }
            },
            "productservice": {
                "ClusterId": "productserviceCluster",
                "Match": {
                    "Path": "/products/{**catch-all}"
                }
            }
        },
        "Clusters": {
            "userserviceCluster": {
                "Destinations": {
                    "userservice": {
                        "Address": "https://localhost:7146/"
                    }
                }
            },
            "orderserviceCluster": {
                "Destinations": {
                    "orderservice": {
                        "Address": "https://localhost:7092/"
                    }
                }
            },
            "productserviceCluster": {
                "Destinations": {
                    "productservice": {
                        "Address": "https://localhost:7080/"
                    }
                }
            }
        }
    },
    "AllowedHosts": "*"
}